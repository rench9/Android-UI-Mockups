<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:background="@drawable/shape_circle"
        android:backgroundTint="#00c853"
        android:padding="25dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_chat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#00c853"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple mobile chat and notes"
        android:textColor="#00c853"
        android:textSize="14sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn"
            android:drawableEnd="@drawable/fb"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Sign in with "
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn"
            android:backgroundTint="#1DA1F2"
            android:drawableEnd="@drawable/twitter"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:text="Sign in with "
            android:textColor="#ffffff"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="28dp"
        android:text="OR"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn"
        android:backgroundTint="#eee"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/forum_user"
        android:drawableTint="#bbb"
        android:hint="Email"
        android:inputType="text"
        android:padding="12dp"
        android:textColor="#222222"
        android:textColorHint="#bbb" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn"
        android:backgroundTint="#eee"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/locked_padlock"
        android:drawableTint="#bbb"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#222222"
        android:textColorHint="#bbb" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/btn"
        android:backgroundTint="@color/color2"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:text="Register"
        android:textColor="@color/color1"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Log in"
        android:textColor="@color/color2"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password?"
        android:textColor="#888"
        android:textSize="14sp" />

</LinearLayout>