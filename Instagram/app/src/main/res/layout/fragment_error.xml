<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="@dimen/elevation4"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/radius2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/typography_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit4"
                android:text="Incorrect password"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/shade2" />

            <TextView
                style="@style/typography_body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit4"
                android:text="The password you entered is incorrect.\nPlease try again." />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/shade2" />

            <TextView
                android:id="@+id/tvRetry"
                style="@style/typography_body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/unit4"
                android:gravity="center"
                android:text="Try Again"
                android:textStyle="bold" />


        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>